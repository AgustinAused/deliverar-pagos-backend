<configuration>

    <!-- Console Appender only -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Package-specific logger at DEBUG -->
    <logger name="com.deliverar.pagos" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root logger at INFO -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
